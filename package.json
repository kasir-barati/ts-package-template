{
  "name": "ts-package-template",
  "version": "1.0.0",
  "description": "TypeScript NPM Package Template",
  "author": "Sidharth Rathi",
  "license": "MIT",
  "source": "./src/index.ts",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "default": "./dist/index.modern.js"
  },
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch",
    "test": "jest --config jest.config.js",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.11.0",
    "eslint-plugin-jest": "^24.1.0",
    "jest": "^26.6.0",
    "microbundle": "^0.14.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sidwebworks/ts-package-template.git"
  },
  "keywords": [
    "boilerplate",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/sidwebworks/ts-package-template/issues"
  },
  "homepage": "https://github.com/sidwebworks/ts-package-template#readme"
}
